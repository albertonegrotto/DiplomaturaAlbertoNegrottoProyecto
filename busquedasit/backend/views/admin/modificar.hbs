<div class="container" style="margin:40px auto">
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-6 offsset-3">
            <h4>Modificar un Cliente</h4>
            <form action="/admin/clientes/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{cliente.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" value="{{cliente.nombre}}" class="form-control"
                        placeholder="Nombre de la Empresa" name="nombre">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Actividad" name="actividad"
                        rows="2">{{cliente.actividad}}</textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Comentario" name="comentario"
                        rows="6">{{cliente.comentario}}</textarea>
                </div>
                <div class="mb-3 row">
                    <p>
                       <label class="form-control">Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>
                    </p>
                    <p>
                        <label><input class="form-check-input" type="checkbox" name="img_delete"
                           id="img_delete" value="1">
                           Eliminar Imagen Actual ?</label>
                        <input type="hidden" name="img_original" id="img_original" value="{{cliente.img_id}}">                       
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
    {{#if error}}
    <div class="mensaje">
        <h5>{{message}}</h5>
    </div>
    {{/if}}
</div>