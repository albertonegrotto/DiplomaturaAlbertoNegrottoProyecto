<div class="container" style="margin-top:100px;margin-bottom:200px">
    <div class="row">
        <form action="/admin/login" method="post">
            <div class="mb-3 row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="inputUser" placeholder="Usuario" name="usuario">
                </div>
                <div class="col-sm-3">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="inputPassword" placeholder="ContraseÃ±a" name="password">
                </div>
                <div class="col-sm-3">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
                <div class="col-sm-3">
                </div>
            </div>
        </form>
    </div>
    {{#if error}}
        <div class="mensaje">
            <h5>Usuario o clave incorrecto</h5>
        </div>
    {{/if}}
</div>